<div style="margin: 10px" class="signup-login-page-container">
  <main
    style="max-width: 504px"
    class="form-signin py-3 px-3 w-100 m-auto signup-login-form-container"
  >
    <form action="/submitUser" method="post" id="signup-form" class="needs-validation" novalidate>
      <h4 class="h4 mb-3 fw-bold text-center">Sign up</h4>
      <h6 class="mb-3 fw-normal text-center">
        Already have an account?
        <a
          href="/login"
          class="btn btn-sm"
          style="color: black; background-color: orange !important"
          >Login</a
        >
      </h6>
      <div>
        <label for="signupUsername" class="form-label">Username</label>
        <br />

        <input
          name="username"
          type="text"
          placeholder="Username"
          class="signup-login-form-input-style form-control" 
          id="signupUsername"
          required
        />
        <div class="username-msg invalid-feedback"></div>
      </div>
      <br />

      <div>
        <label for="signupEmail" class="form-label">Email address</label>
        <br />

        <input
          name="email"
          type="email"
          placeholder="name@example.com"
          class="signup-login-form-input-style form-control"
          id="signupEmail"
          required
        />
        <div class="email-msg invalid-feedback"></div>
      </div>
      <br />

      <div style="position: relative">
        <label for="signupPassword" class="form-label">Password</label>
        <br />

        <input
          name="password"
          type="password"
          placeholder="Password"
          class="signup-login-form-input-style form-control"
          id="signupPassword"
        />
        <span
          class="material-symbols-outlined showPswdButton"
          id="signupShowPswdButton"
          onclick="togglePasswordVisability('signupPassword', 'signupShowPswdButton')"
          >visibility_off</span
        >
        <div class="password-msg invalid-feedback"></div>
      </div>
      <br />

      <!-- Remove this

      <div class="form-check text-start my-3">
        <input
          class="form-check-input"
          type="checkbox"
          value="remember-me"
          id="flexCheckDefault"
        />
        <label class="form-check-label" for="flexCheckDefault">
          Remember me
        </label>
      </div>
      -->

      <button
        style="background-color: #003249 !important; color: white"
        class="btn w-100 py-2"
        type="submit"
      >
        Sign up
      </button>
    </form>

    <br />

    <a
      style="color: black; text-decoration: none"
      href="/auth/google?signup=true"
      ><button
        type="button"
        class="btn btn-outline-primary btn w-100 py-2 mb-3"
      >
        <img
          style="width: 30px; padding-right: 5px"
          src="./google.png"
          alt=""
        />Sign Up with Google
      </button></a
    >
  </main>
</div>

<!-- Password visability function -->
<script src="/js/signup-login.js"></script>

<!-- Client-side validation -->
<script defer src="/clientSideValidator-client.js"></script>

<script>
  const userEmail = <%- JSON.stringify(userEmail) %>;
   if (userEmail) {  document.getElementById("signupEmail").value = userEmail}

   const username = <%- JSON.stringify(username) %>;
   if (username) {  document.getElementById("signupUsername").value = username}
</script>
